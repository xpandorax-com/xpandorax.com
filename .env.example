# App Configuration
APP_URL=http://localhost:8788
APP_NAME=XpandoraX

# Payload CMS Secret (generate a strong random string)
PAYLOAD_SECRET=your-super-secret-payload-key-change-in-production-min-32-chars

# Lemon Squeezy (subscription payments for "Remove Ads")
LEMON_SQUEEZY_API_KEY=your-lemon-squeezy-api-key
LEMON_SQUEEZY_WEBHOOK_SECRET=your-webhook-signing-secret
LEMON_SQUEEZY_STORE_ID=your-store-id
LEMON_SQUEEZY_VARIANT_ID=your-variant-id-for-remove-ads-subscription

# Ad Networks (only served to non-premium users)
EXOCLICK_ZONE_ID=your-exoclick-zone-id
